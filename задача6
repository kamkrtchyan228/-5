def calculate_distance(x1, y1, x2, y2):
    """
    Вычисляет расстояние между двумя точками в двумерном пространстве.
    
    Args:
        x1 (float): x-координата первой точки
        y1 (float): y-координата первой точки
        x2 (float): x-координата второй точки
        y2 (float): y-координата второй точки
        
    Returns:
        float: Расстояние между двумя точками
    """
    distance = ((x2 - x1)**2 + (y2 - y1)**2) ** 0.5
    return distance


def calculate_triangle_area(a, b, c):
    """
    Вычисляет площадь треугольника по формуле Герона.
    
    Args:
        a (float): Длина стороны a
        b (float): Длина стороны b
        c (float): Длина стороны c
        
    Returns:
        float: Площадь треугольника
        
    Raises:
        ValueError: Если стороны не могут образовать треугольник
    """
    # Проверка, могут ли стороны образовать треугольник
    if a + b <= c or a + c <= b or b + c <= a:
        raise ValueError("Данные стороны не могут образовать треугольник")
    
    # Вычисление полупериметра
    s = (a + b + c) / 2
    
    # Вычисление площади по формуле Герона
    area = (s * (s - a) * (s - b) * (s - c)) ** 0.5
    return area


def main():
    """
    Основная программа для вычисления площади треугольника по координатам.
    """
    print("Вычисление площади треугольника по координатам")
    print("Введите координаты трех точек:")
    
    try:
        # Получение координат точки A
        x1 = float(input("Введите x-координату для точки A: "))
        y1 = float(input("Введите y-координату для точки A: "))
        
        # Получение координат точки B
        x2 = float(input("Введите x-координату для точки B: "))
        y2 = float(input("Введите y-координату для точки B: "))
        
        # Получение координат точки C
        x3 = float(input("Введите x-координату для точки C: "))
        y3 = float(input("Введите y-координату для точки C: "))
        
        # Вычисление длин сторон
        side_ab = calculate_distance(x1, y1, x2, y2)
        side_bc = calculate_distance(x2, y2, x3, y3)
        side_ca = calculate_distance(x3, y3, x1, y1)
        
        # Вычисление площади
        area = calculate_triangle_area(side_ab, side_bc, side_ca)
        
        # Вывод результатов
        print(f"\nСтороны треугольника:")
        print(f"AB = {side_ab:.2f}")
        print(f"BC = {side_bc:.2f}")
        print(f"CA = {side_ca:.2f}")
        print(f"Площадь треугольника = {area:.2f}")
        
    except ValueError as e:
        print(f"Ошибка: {e}")
    except Exception as e:
        print(f"Произошла ошибка: {e}")


# Запуск программы
if __name__ == "__main__":
    main()
